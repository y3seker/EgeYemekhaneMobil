<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mymenus_row_card"
    style="@style/CardViewStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mymenus_row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:paddingBottom="6dp"
            android:text="15.15.15"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="normal" />

        <GridLayout
            android:layout_height="wrap_content"
            android:layout_below="@+id/mymenus_row_date"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content">

            <TextView
                android:id="@+id/mymenus_row_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/breakfast"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/grey_400"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mymenus_row_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/lunch"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/grey_400"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mymenus_row_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/dinner"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/grey_400"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mymenus_row_iftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/iftar"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/grey_400"
                android:textStyle="bold" />

        </GridLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>