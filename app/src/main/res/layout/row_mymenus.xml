<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mymenus_row_card"
    style="@style/CardViewStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mymenus_row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="5dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:paddingTop="5dp"
            android:text="15.15.15"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/mymenus_row_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mymenus_row_date"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="İftar"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey_400"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mymenus_row_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mymenus_row_date"
            android:layout_centerHorizontal="true"
            android:text="Öğle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey_400"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mymenus_row_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mymenus_row_date"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="@string/dinner"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey_400"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mymenus_row_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/mymenus_row_date"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:paddingTop="5dp"
            android:text="kredi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="13sp"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>