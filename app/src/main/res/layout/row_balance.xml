<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_card"
    style="@style/CardViewStyle">

    <RelativeLayout
        android:id="@+id/balance_row_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/balance_row_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="56,5 ₺"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/green_500"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/balance_row_sont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/balance_row_it"
            android:text="48,2 ₺"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="visible" />

        <TextView
            android:id="@+id/balance_row_tarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="12.12.2015"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/balance_row_yer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/balance_row_tarih"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/balance_row_time"
            android:layout_toRightOf="@+id/balance_row_time"
            android:text="WEB (2 NOLU)"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/balance_row_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/balance_row_tarih"
            android:text="16:00:54"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

    <View
        android:id="@+id/balance_row_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:background="@color/red_A400"
        android:visibility="gone" />

</android.support.v7.widget.CardView>